generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model albums {
  id    Int     @id @default(autoincrement())
  title String
  art   String?
  songs songs[]
}

model songs {
  id          Int     @id @default(autoincrement())
  album       Int?
  song_title  String
  artist      String?
  filepath    String?
  song_number Int?
  albums      albums? @relation(fields: [album], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model events {
  id            Int       @id @default(autoincrement())
  title         String?
  art           String?
  eventdate     DateTime? @db.Date
  eventtime     DateTime? @db.Time(6)
  eventlocation String?
  eventaddress  String?
  eventcity     String?
  eventstate    String?
}
